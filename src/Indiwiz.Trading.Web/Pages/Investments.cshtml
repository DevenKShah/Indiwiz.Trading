@page
@model Indiwiz.Trading.Web.Pages.InvestmentsModel
@{
    ViewData["Title"] = "Investments made";
}

<h1>@ViewData["Title"]</h1>

<table class="table table-striped">
    <thead>
        <tr class="table-dark">
            <th scope="col">Date</th>
            <th scope="col">Amount</th>
        </tr>
    </thead>
    @foreach (var investment in Model.Investments.OrderBy(o => o.InvestmentDate))
    {
        <tr class="table-danger">
            <td>@investment.InvestmentDate.ToShortDateString()</td>
            <td>@investment.Amount</td>
        </tr>
    }
</table>
