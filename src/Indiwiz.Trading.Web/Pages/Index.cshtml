@page
@model IndexModel
@{
    ViewData["Title"] = "Dashboard";
}

<div class="text-center">
    <h1 class="display-4">Trading.Net</h1>
    <p>Updated on @Model.LastActivityDate.ToShortDateString()</p>
    <br />
</div>

<div class="row">
    @foreach(var card in Model.Cards)
    {
        <div class="col-sm-4">
            <div class="card text-bg-info mb-3" style="width: 18rem;">
                <div class="card-header">@card.Header</div>
                <div class="card-body">
                    <h5 class="card-text">@card.Body</h5>
                </div>
                <div class="card-footer">
                    <a asp-page="/@card.Header" class="btn btn-primary">@card.Header</a>
                </div>
            </div>
        </div>
    }
</div>
